{
  "title": "Add a Property",
  "description": "Add a Property",
  "type": "object",
  "properties": {
    "effective_date": {
      "type": "string",
      "format": "date"
    },
    "new_address": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "postal_code": {
          "type": "string"
        },
        "province": {
          "type": "string",
          "enum": [
            "AB",
            "BC",
            "MB",
            "NB",
            "NL",
            "NT",
            "Ns",
            "NU",
            "ON",
            "PE",
            "QC",
            "SK",
            "YT"
          ],
          "enumNames": [
            "Alberta",
            "British Columbia",
            "Manitoba",
            "New Brunswick",
            "Newfoundland and Labrador",
            "Northwest Territories",
            "Nova Scotia",
            "Nunavut",
            "Ontario",
            "Prince Edward Island",
            "Quebec",
            "Saskatchewan",
            "Yukon Territory"
          ]
        }
      },
      "required": [
        "address",
        "city",
        "postal_code",
        "province"
      ]
    },
    "ownership": {
      "type": "string",
      "enum": [
        "rent",
        "own"
      ],
      "enumNames": [
        "Rent",
        "Own"
      ]
    },
    "type_of_dwelling": {
      "type": "string",
      "enum": [
        "detached",
        "semi_detached",
        "condo",
        "other"
      ],
      "enumNames": [
        "Detached",
        "Semi-Detached",
        "Condo",
        "Other"
      ]
    },
    "property_type": {
      "type": "string",
      "enum": [
        "principal",
        "seasonal",
        "rental"
      ],
      "enumNames": [
        "Principal",
        "Seasonal",
        "Rental"
      ]
    },
    "year_built": {
      "type": "string"
    },
    "sq_feet_above_ground": {
      "type": "string"
    },
    "fire_alarm": {
      "type": "string",
      "enum": [
        "Yes",
        "No"
      ]
    },
    "security_alarm": {
      "type": "string",
      "enum": [
        "Yes",
        "No"
      ]
    },
    "value_of_personal_belongings": {
      "title": "Value of personal belongings",
      "type": "string"
    },
    "capability_for_property_details": {
      "type": "string",
      "format": "photo"
    },
    "additional_info": {
      "title": "Additional Info",
      "type": "string",
      "format": "textarea"
    }
  },
  "required": [
    "effective_date",
    "new_address",
    "ownership",
    "value_of_personal_belongings",
    "type_of_dwelling",
    "property_type",
    "fire_alarm",
    "security_alarm"
  ]
}